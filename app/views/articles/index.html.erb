<h1>Listing articles</h1>
 
<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td>
      <%= article.text %>

      </td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-info btn-xs' %></td>

      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete'  }, class: 'btn btn-xs btn-danger' %></td>
    </tr>
  <% end %>
</table>